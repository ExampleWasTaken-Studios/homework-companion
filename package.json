{
  "name": "homework-companion",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "Task managing application",
  "main": "build/electron/main.js",
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/ExampleWasTaken-Studios/homework-companion.git"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none npm run react:start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "build": "npm run react:build && tsc -p electron && electron-builder -c stable.electron-builder.json",
    "build:canary": "npm run react:build && tsc -p electron && electron-builder -c canary.electron-builder.json",
    "build:icon": "./node_modules/.bin/electron-icon-builder -i=\"./assets/build/stable/logo.png\" -o=\"./assets/build/stable\" -f",
    "build:icon:canary": "./node_modules/.bin/electron-icon-builder -i=\"./assets/build/canary/logo.png\" -o=\"./assets/build/canary\" -f",
    "clean:mac": "rm -r dist build",
    "clean:win": "rmdir dist build /q /s",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "react:test": "react-scripts test",
    "react:eject": "react-scripts eject",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "ExampleWasTaken Studios",
  "license": "GPL-3.0",
  "dependencies": {
    "@ewt-studios/updater": "^2.0.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.56",
    "electron-devtools-installer": "^3.2.0",
    "electron-localshortcut": "^3.2.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-store": "^8.1.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.0",
    "source-map-support": "^0.5.21",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/electron-localshortcut": "^3.1.0",
    "@types/lodash": "^4.14.185",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "concurrently": "^7.3.0",
    "cross-env": "^7.0.3",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "electron-icon-builder": "^2.0.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.23.1",
    "eslint-plugin-react": "^7.31.8",
    "react-scripts": "^5.0.1",
    "typescript": "^4.8.3",
    "typescript-eslint": "^0.0.1-alpha.0",
    "wait-on": "^6.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
